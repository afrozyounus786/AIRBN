<% layout("/layouts/boilerplate") %>
<div class="row">
<div class="col-8 offset-2">
<body>
    <h3><%= listing.title %></h3>

    <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">
  <div class="card-body">
    <p class="card-text"></p>
  </div>
    <ul>
     
        <li><%= listing.description %></li>
        <li>&#8377;<%= listing.price %></li>
        <li><%= listing.location %></li>
        <li><%= listing.country %></li>
    </ul>
    <br>
    <a href="/listings/<%= listing._id %>/edit" class="gb">Edit this Listing</a>
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <br>
        <button>Delete this listing</button>
    </form>
    <div class="col-8 offset-2 mb-3">
      <hr>
      <h4>Leave a Review</h4>
      <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
        <div class="mb-3 mt-3">
          <label for="rating">Rating</label>
          <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
        </div>
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea name="review[comment]" id="comment" cols="30" row="5" class="form-control" required></textarea>
          <div class="invalid-feedback">
            Pleade add some comments for review
          </div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>
    </div>
</body>
</div>

</div>
